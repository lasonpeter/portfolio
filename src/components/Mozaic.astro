---
let images = [
    { src: "/vertical1.jpg", title: "Spirala", orientation: "vertical" },
    { src: "/vertical2.jpg", title: "Spirala", orientation: "vertical" },
    { src: "/horizontal1.jpg", title: "Spirala", orientation: "horizontal" },
    { src: "/vertical1.jpg", title: "Spirala \"Cyberpunk\"", orientation: "vertical" },
    { src: "/horizontal2.jpg", title: "Spirala", orientation: "horizontal" },
];
---

<html lang="en">
<head>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
        }

        .mosaic-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); /* Adjusts rows flexibly */
            grid-auto-rows: auto; /* Automatically sizes rows */
            gap: 15px;
            padding: 20px;
        }

        /* Horizontal image - make it span the full row */
        .mosaic-item.horizontal {
            grid-column: 1 / -1; /* Make horizontal images span the entire row */
        }

        .mosaic-item {
            position: relative;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            display: block;
            width: 100%;
            aspect-ratio: var(--aspect-ratio, 1);
        }

        .mosaic-item img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .mosaic-item-title {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 5px 8px;
            font-size: 0.8rem;
            border-radius: 5px;
        }
    </style>
</head>
<body>
<div class="mosaic-container w-1/2">
    {images.map(({ src, title, orientation }, index) => (
            <div
                    class={`mosaic-item ${orientation}`} /* Dynamically assign "horizontal" or "vertical" class */
        style={`--aspect-ratio: ${orientation === "horizontal" ? 16 / 9 : 3 / 4};`}
    key={index}
    >
    <img src={src} alt={title} />
    <div class="mosaic-item-title">{title}</div>
</div>
))}
</div>
</body>
</html>